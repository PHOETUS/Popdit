@model PopditWeb.Models.Profile
@{
    ViewBag.Title = "Create new account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    @using (Html.BeginForm())
    {
        <table id="content" class="content">
            <tr>
                <td colspan="2"><span class=logo><img src="~/Content/Logo.gif" width="206" height="58" /></span></td>
            </tr>
            <tr>
                <td colspan="2">@PageData["Tagline"]</td>
            </tr>
            <tr>
                <td colspan="2">&nbsp;</td>
            </tr>
            <tr>
                <td class="pagetitle" colspan="2">Create new account</td>
            </tr>
            <tr class="form">
                <td>Phone</td>
                <td>
                    @Html.EditorFor(model => model.Phone)
                </td>
            </tr>
            <tr class="form">
                <td>Password</td>
                <td>
                    @Html.EditorFor(model => model.Password)
                </td>
            </tr>
            <tr class="form">
                <td>Nickname</td>
                <td>
                    @Html.EditorFor(model => model.Nickname)
                </td>
            </tr>
            <tr class="form">
                <td>Email</td>
                <td>
                    @Html.EditorFor(model => model.Email)
                </td>
            </tr>
            <tr class="form">
                <td>Date of birth</td>
                <td>
                    @Html.EditorFor(model => model.DobJson)
                </td>
            </tr>
            <tr class="form">
                <td>Gender</td>
                <td>
                    @Html.DropDownListFor(model => model.Male,
                  new List<SelectListItem>{
                       new SelectListItem { Value = "null" , Text = "Not set" },
                       new SelectListItem { Value = "0" , Text = "Female" },
                       new SelectListItem { Value = "1" , Text = "Male" }
                    })
                </td>

            </tr>
            <tr>
                <td>@Html.HiddenFor(m => m.Id)</td>
                <td><input type="submit" value="Create new account" /></td>
            </tr>
        </table>
    }
</div>