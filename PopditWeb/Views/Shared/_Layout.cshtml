<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:image" content="https://stage.popdit.com/Content/Logo.gif" />
    <title>@ViewBag.Title - Popdit</title>
    @Styles.Render("~/Content/css")
